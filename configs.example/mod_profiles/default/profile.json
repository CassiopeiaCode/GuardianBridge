{
  "ai": {
    "provider": "openai",
    "base_url": "https://api.openai.com/v1",
    "model": "gpt-4o-mini",
    "api_key_env": "MOD_AI_API_KEY",
    "timeout": 10
  },
  "prompt": {
    "template_file": "ai_prompt.txt",
    "max_text_length": 4000
  },
  "probability": {
    "ai_review_rate": 0.3,
    "random_seed": 42,
    "low_risk_threshold": 0.2,
    "high_risk_threshold": 0.8
  },
  "bow_training": {
    "min_samples": 200,
    "retrain_interval_minutes": 60,
    "max_samples": 50000,
    "max_features": 8000,
    "use_char_ngram": true,
    "char_ngram_range": [2, 3],
    "use_word_ngram": true,
    "word_ngram_range": [1, 2],
    "model_type": "sgd_logistic",
    "batch_size": 2000,
    "max_seconds": 300,
    "max_db_items": 100000
  }
}